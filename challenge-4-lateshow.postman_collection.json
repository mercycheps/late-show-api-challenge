{
  "info": {
    "_postman_id": "d1f0c524-aaaa-bbbb-cccc-123456789abc",
    "name": "Late Show API Challenge",
    "description": "Postman collection to test all Late Show API routes with authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{base_url}}/register", "host": ["{{base_url}}"], "path": ["register"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "Login User",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{base_url}}/login", "host": ["{{base_url}}"], "path": ["login"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const data = pm.response.json();",
              "if (data.access_token) {",
              "    pm.environment.set(\"jwt\", data.access_token);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get All Episodes",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{base_url}}/episodes", "host": ["{{base_url}}"], "path": ["episodes"] }
      }
    },
    {
      "name": "Get Episode by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/episodes/1",
          "host": ["{{base_url}}"],
          "path": ["episodes", "1"]
        }
      }
    },
    {
      "name": "Delete Episode (Auth)",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/episodes/1",
          "host": ["{{base_url}}"],
          "path": ["episodes", "1"]
        }
      }
    },
    {
      "name": "Get All Guests",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{base_url}}/guests", "host": ["{{base_url}}"], "path": ["guests"] }
      }
    },
    {
      "name": "Create Appearance (Auth)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt}}" }
        ],
        "url": { "raw": "{{base_url}}/appearances", "host": ["{{base_url}}"], "path": ["appearances"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"guest_id\": 1,\n  \"episode_id\": 1,\n  \"rating\": 4\n}"
        }
      }
    }
  ],
  "event": [],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000"
    },
    {
      "key": "jwt",
      "value": ""
    }
  ]
}
